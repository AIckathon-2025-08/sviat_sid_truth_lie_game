<div class="card">
  <div class="text-center mb-4">
    <h1><i class="fas fa-gamepad"></i> Truth or Lie Games</h1>
    <p class="text-muted">Welcome to the town hall game! Choose a game to participate or create a new one.</p>
  </div>
  
  <div class="text-center mb-4">
    <a href="/games/new" class="btn btn-success">
      <i class="fas fa-plus"></i> Create New Game
    </a>
  </div>
  
  <% if @games.any? %>
    <div class="grid grid-2">
      <% @games.each do |game| %>
        <div class="card">
          <div class="text-center">
            <img src="<%= game.candidate_photo %>" alt="<%= game.candidate_name %>" class="candidate-photo">
            <h3 class="mt-4"><%= game.candidate_name %></h3>
            <p class="text-muted">Started: <%= game.created_at&.strftime("%B %d, %Y at %I:%M %p") || "Just now" %></p>
            <p class="text-muted">Total Votes: <%= game.total_votes %></p>
            <p class="text-muted">Game Code: <strong><%= game.token %></strong></p>
            
            <div class="mt-4">
              <a href="/game/<%= game.token %>" class="btn btn-primary">
                <i class="fas fa-play"></i> Play Game
              </a>
              <a href="/game/<%= game.token %>/results" class="btn btn-info">
                <i class="fas fa-chart-bar"></i> View Results
              </a>
            </div>
            
            <div class="mt-3">
              <small class="text-muted">Share this link: <code><%= request.base_url %>/game/<%= game.token %></code></small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center">
      <p class="text-muted">No active games found. Create the first game!</p>
    </div>
  <% end %>
</div>
